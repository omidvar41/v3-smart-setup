<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_margin="@dimen/_10sdp"

    android:layout_height="@dimen/_150sdp"
    android:orientation="vertical" android:layout_gravity="center">

    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:background="@drawable/dialog_background_inset"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent" android:layout_weight="0.5">




                <TextView
                    android:id="@+id/txtPhoneCn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="3dip"
                    android:text="0/16"
                    android:textSize="18dip" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent" android:layout_weight="0.5" android:gravity="right">


                <TextView
                    android:id="@+id/txtMamoryEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="3dip"
                    android:text="Mamory"
                    android:textSize="18dip" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_gravity="center">


            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="fill_parent"
                android:ems="10"
                android:inputType="number"
                android:textSize="24dip" android:maxLength="16">

                <requestFocus />
            </EditText>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center">





            <Button
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/circle_btn_gray"
                android:id="@+id/btnExit"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="انصراف" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>


            <Button
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/circle_btn_gray"
                android:id="@+id/btnSave"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="ذخیره" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>