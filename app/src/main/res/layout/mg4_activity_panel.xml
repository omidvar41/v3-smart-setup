<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="ltr"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <include layout="@layout/mg4_custom_toolbar"/>


    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_marginBottom="5dp"
            android:id="@+id/layTaimAlarm"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.15" android:background="@drawable/back_btn_clik1">


            <TextView
                android:id="@+id/txtTaimAlarm"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight=".6"
                android:gravity="right|center_vertical"
                android:paddingRight="3dip"
                android:textSize="18dip" android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight=".4"
                android:orientation="vertical" android:gravity="right|center_vertical">

                <TextView
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مدت آژیر:" android:gravity="right|center_vertical" android:textColor="#ffffff"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="5dp"

            android:id="@+id/layPower"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.15" android:background="@drawable/back_btn_clik1">



            <TextView
                android:id="@+id/txtPower"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight=".6"
                android:gravity="right|center_vertical"
                android:paddingRight="3dip"
                android:textSize="18dip" android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight=".4"
                android:orientation="vertical" android:gravity="right|center_vertical">

                <TextView
                    android:paddingRight="5dp"

                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="هشدار قطع برق:" android:textColor="#ffffff"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="5dp"

            android:id="@+id/layZon24h"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.15" android:background="@drawable/back_btn_clik1">



            <TextView
                android:id="@+id/txtZon24h"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight=".6"
                android:gravity="right|center_vertical"
                android:paddingRight="3dip"
                android:textSize="18dip" android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight=".4"
                android:orientation="vertical" android:gravity="right|center_vertical">

                <TextView
                    android:paddingRight="5dp"

                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="زون 24ساعته:" android:textColor="#ffffff"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layChrip"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.15" android:background="@drawable/back_btn_clik1">



            <TextView
                android:id="@+id/txtChrip"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight=".6"
                android:gravity="right|center_vertical"
                android:paddingRight="3dip"
                android:textSize="18dip" android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight=".4"
                android:orientation="vertical" android:gravity="right|center_vertical">

                <TextView
                    android:paddingRight="5dp"

                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="تک بوق:" android:textColor="#ffffff"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.4"
            android:orientation="vertical" >
        </LinearLayout>

    </LinearLayout>

</LinearLayout>