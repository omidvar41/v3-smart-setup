<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layoutDirection="ltr"

    android:layout_height="fill_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android">
<include layout="@layout/g4_custom_tolbar_gfour"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:orientation="vertical" android:layout_weight="0.1">


        <LinearLayout
            android:layout_marginBottom="5dp"
            android:id="@+id/layChekCharg"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.5" >




            <LinearLayout
                android:id="@+id/layselectsim"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.9"
                android:gravity="center" android:clickable="true"
                android:background="@drawable/back_btn_clik1">

                <TextView
                    android:id="@+id/txtEetebari"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:paddingRight="3dip"
                    android:textSize="20dip" android:textColor="#ffffff"/>


                <TextView

                    android:id="@+id/txtoperator"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:paddingRight="3dip"
                    android:textSize="20dip" android:textColor="#ffffff"/>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="right|center_vertical" >

                    <TextView

                        android:textStyle="bold"
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="right|center_vertical"
                        android:paddingRight="4dip"
                        android:text="سیمکارت: "
                        android:textColor="#ffffff"
                        android:textSize="18dip" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:orientation="vertical" android:layout_weight="0.1">

            <LinearLayout
                android:id="@+id/layCodeChekCharge"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="0.5" >




                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.9"
                    android:gravity="center" android:clickable="true"
                  >

                    <TextView
                        android:id="@+id/txtCodeChekCharge"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="right|center_vertical"
                        android:paddingRight="3dip"
                        android:textSize="20dip"
                        android:textColor="#949494"
                        />

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="right|center_vertical" >

                        <TextView

                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="right|center_vertical"
                            android:paddingRight="4dip"
                            android:text="فرمول کنترل شارژ: "
                            android:textColor="#949494"

                            android:textSize="18dip" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:orientation="vertical" android:layout_weight="0.7">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="65dip"
            >




<LinearLayout
    android:layout_width="0dp"
    android:layout_margin="3dp"
    android:layout_weight="0.5"
    android:layout_height="match_parent">
            <info.hoang8f.widget.FButton
                android:layout_margin="5dp"
                android:id="@+id/btnChekCharge"
                android:layout_width="0dip"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:text="کنترل شارژ" android:textColor="#000000"/>


        </LinearLayout>




        </LinearLayout>


        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:gravity="center|top"
            android:orientation="vertical" android:layout_weight="0.85">
            <ProgressBar
                android:visibility="visible"
                android:id="@+id/progressbar"
                android:layout_marginBottom="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView

                android:id="@+id/txtCusd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:paddingRight="3dip"
                android:textSize="20dip" android:textColor="#aeaeae"/>

            <TextView

                android:id="@+id/txtWaith"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:paddingRight="3dip"
                android:textSize="20dip" android:textColor="#aeaeae"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>