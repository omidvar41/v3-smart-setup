<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"

    android:orientation="vertical" android:layout_gravity="center">



    <LinearLayout
        android:layout_width="256dip"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:layout_gravity="center" android:gravity="right|center_vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مدت آژیر:" android:gravity="right|center_vertical" android:textSize="18dip"/>



        <Spinner

            style="@style/spinnerItemStyle"
            android:id="@+id/spiTimeAlarm"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center">


        <Button
            android:id="@+id/btnExit1"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="انصراف" />



        <Button
            android:id="@+id/btnSave1"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="ذخیره" />

    </LinearLayout>

</LinearLayout>