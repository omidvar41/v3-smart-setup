<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content" android:layout_weight="0.5" android:layout_gravity="center" android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/txtLebelCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:paddingRight="3dip"
                    android:text="دستور شارژ  را وارد کنید"

                    android:textSize="18dip" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="256dip"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:layout_gravity="center">





        <EditText
            android:id="@+id/edtCharge"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:ems="10"
            android:inputType="phone"

            android:textSize="24dip"
            android:textStyle="bold" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center">



        <Button
            android:id="@+id/btnExitCharge"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="انصراف" />




        <Button
            android:id="@+id/btnSendCharge"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="ارسال" />

    </LinearLayout>

</LinearLayout>