<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"

    android:orientation="vertical" android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content" android:layout_weight="0.5">




            <TextView
                android:id="@+id/txtCnTrigEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="3dip"
                android:text="35/0"
                android:textSize="18dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content" android:layout_weight="0.5" android:layout_gravity="right" android:gravity="right">



            <TextView
                android:id="@+id/txtTrigEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="3dip"
                android:text="Trig"
                android:textSize="18dip" />

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="256dip"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:layout_gravity="center">





        <EditText
            android:id="@+id/edtTrigText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:ems="10"
            android:inputType="textCapWords"
            android:maxLength="35"
            android:textSize="24dip"
            android:textStyle="bold" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center">




        <Button
            android:id="@+id/btnExitTrig"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="انصراف" />




        <Button
            android:id="@+id/btnSaveTrig"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="ذخیره" />

    </LinearLayout>

</LinearLayout>