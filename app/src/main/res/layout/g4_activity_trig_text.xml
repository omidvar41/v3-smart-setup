                android:orientation="vertical" >

                <TextView
                    android:paddingRight="4dp"
                    android:textStyle="bold"
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":T4-on"
                    android:textColor="#ffffff"
                    android:textSize="18dip" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layTrig4off"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.15" android:background="@drawable/back_btn_clik1">

 
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:orientation="vertical" android:layout_weight="0.6" android:gravity="right|center_vertical">

                <TextView
                    android:id="@+id/txtTrig4off"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.8"
                    android:gravity="right|center_vertical"
                    android:paddingRight="3dip"
                    android:textColor="#ffffff"
                    android:textSize="20dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:gravity="right|center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:paddingRight="4dp"
                    android:textStyle="bold"
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":T4-off"
                    android:textColor="#ffffff"
                    android:textSize="18dip" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip" android:layout_weight="0.4">
        </LinearLayout>

    </LinearLayout>

