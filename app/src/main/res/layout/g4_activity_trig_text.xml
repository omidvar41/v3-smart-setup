                    android:textColor="#ffffff"
                    android:textSize="20dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:gravity="right|center_vertical"
                android:orientation="vertical" >

