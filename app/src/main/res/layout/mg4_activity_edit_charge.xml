<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_margin="@dimen/_10sdp"
    android:gravity="center"

    android:layout_height="@dimen/_150sdp"
    android:orientation="vertical" android:layout_gravity="center">


    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:background="@drawable/dialog_background_inset"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content" android:layout_weight="0.5">




                <TextView
                    android:id="@+id/txtCnChargeEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="3dip"
                    android:text="10/1"
                    android:textSize="18dip" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content" android:layout_weight="0.5" android:layout_gravity="right" android:gravity="right">




                <TextView
                    android:id="@+id/txtChargeEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="3dip"
                    android:text="charge"
                    android:textSize="18dip" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_gravity="center">





            <EditText
                android:id="@+id/edtChargeCode"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:ems="10"
                android:inputType="phone"
                android:textDirection="ltr"
                android:maxLength="10"
                android:textSize="24dip"
                android:textStyle="bold" >

                <requestFocus />
            </EditText>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center">





            <Button
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/circle_btn_gray"
                android:layout_gravity="left"
                android:id="@+id/btnExitCharge"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="انصراف" />


            <View
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"/>




            <Button

                android:textSize="@dimen/_12sdp"
                android:background="@drawable/circle_btn_gray"
                android:id="@+id/btnSaveCharge"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="ذخیره" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>