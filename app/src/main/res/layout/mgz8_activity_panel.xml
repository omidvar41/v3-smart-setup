<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"


    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <include layout="@layout/mg4_custom_toolbar"/>


    <LinearLayout

        android:layout_margin="9dp"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical" >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/layStart"

            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.15"
            android:background="@drawable/back_btn_clik1">
            <LinearLayout

                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/numDelayStart"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_yekan_bold"
                    android:gravity="right|center_vertical"

                    android:paddingRight="5dp"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:text="12 ثانیه" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_yekan_bold"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="تاخیر ورود : "
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <SeekBar
                android:id="@+id/SeekBarStart"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:filterTouchesWhenObscured="false"
                android:max="60"
                android:min="10"
                android:thumbTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                tools:ignore="UnusedAttribute" />




        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:id="@+id/layExit"

            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.15"
            android:background="@drawable/back_btn_clik1">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/numDelayExit"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_yekan_bold"
                    android:gravity="right|center_vertical"

                    android:paddingRight="5dp"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:text="12 ثانیه" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_yekan_bold"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="تاخیر خروج : "
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <SeekBar
                android:id="@+id/SeekBarExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:clickable="false"
                android:focusableInTouchMode="false"
android:filterTouchesWhenObscured="false"
                android:max="120"
                android:min="20"
                android:thumbTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                tools:ignore="UnusedAttribute" />






        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginBottom="5dp"
    android:orientation="vertical"
            android:id="@+id/layAlarm"

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.15"
            android:background="@drawable/back_btn_clik1">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/numDelayAlarm"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_yekan_bold"
                    android:gravity="right|center_vertical"

                    android:paddingRight="5dp"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:text="12 دقیقه" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iran_yekan_bold"
                    android:gravity="right|center_vertical"
                    android:paddingRight="5dp"
                    android:text="مدت آژیر: "
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <SeekBar
                android:id="@+id/SeekBarAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:clickable="false"
                android:focusableInTouchMode="false"
                android:filterTouchesWhenObscured="false"
                android:max="7"
                android:min="1"
                android:thumbTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                tools:ignore="UnusedAttribute" />



        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layChrip"
            android:orientation="vertical"
            android:background="@drawable/back_btn_clik1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.15"
            >

            <LinearLayout
                android:id="@+id/linTop"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/iran_yekan_bold"

                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:id="@+id/numTakBib"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12 %"
                    android:gravity="right|center_vertical"
                    android:textColor="#ffffff"/>

                <TextView
                    android:fontFamily="@font/iran_yekan_bold"

                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تک بوق : " android:gravity="right|center_vertical" android:textColor="#ffffff"/>


            </LinearLayout>
            <SeekBar
                app:layout_constraintStart_toEndOf="@+id/iconSeekBar"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/SeekBarTak"
                android:layout_width="0dp"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:filterTouchesWhenObscured="false"
                android:layout_height="wrap_content"

                android:layout_weight="0.1"
                android:max="100"
                android:thumbTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linTop"
                tools:ignore="UnusedAttribute" />



            <ImageButton
                android:id="@+id/iconSeekBar"


                android:layout_width="@dimen/_50sdp"

                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_9sdp"
                android:background="@drawable/circle_border_white"
                android:padding="@dimen/_10sdp"
                android:scaleType="centerInside"
                android:src="@drawable/on_mute"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="0.4"
            android:orientation="vertical" >
        </LinearLayout>

    </LinearLayout>

</LinearLayout>