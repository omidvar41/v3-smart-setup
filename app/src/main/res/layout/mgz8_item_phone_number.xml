
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="5dp"
    android:id="@+id/layMemory1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal" android:background="@drawable/back_btn_clik1">
    <Button


        android:layout_marginTop="1dp"
        android:textSize="@dimen/_10sdp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:minWidth="0dp"
        android:text="Test"
        android:textColor="#000"
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2" android:gravity="center">





        <TextView
            android:textColor="#fff"

            android:id="@+id/txtTkzngMemory1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2" android:gravity="center">





        <TextView
            android:textColor="#fff"
            android:id="@+id/txtReportMemory1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center" >


        <ImageView
            android:id="@+id/imgControlMemory1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_accept" android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent" android:layout_weight="0.45">


        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:padding="2dip"
            android:textColor="#ffffff"
            android:textSize="16dip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        >

        <TextView
            android:textSize="16dp"
            android:paddingRight="5dp"
            android:id="@+id/numMemory"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text=":1" android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>

