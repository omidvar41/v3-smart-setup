
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <gradient  android:startColor="#7da3d6dc" android:centerColor="#7da3d6dc" android:angle="90" android:endColor="#7da3d6dc"></gradient>
            <corners android:radius="8dp" ></corners>
            <stroke android:width="0dp"/>


        </shape>

    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <gradient  android:startColor="#00ddeddb" android:centerColor="#00ffffff" android:endColor="#00ddeddb" android:angle="90"></gradient>
            <corners android:radius="100dp" ></corners>
            <stroke android:width="0dp" />


        </shape>






    </item>






</selector>
